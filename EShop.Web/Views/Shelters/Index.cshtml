@model IEnumerable<EShop.Domain.Models.Shelter>

@{
    ViewData["Title"] = "Shelters";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - EShop</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f0f2f5;
            color: #333;
        }

        .container {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 2rem;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }

        h1 {
            color: #4a4a4a;
            margin-bottom: 1.5rem;
            font-size: 2.5rem;
            text-align: center;
            font-weight: bold;
        }

        .btn {
            border-radius: 30px;
            padding: 0.5rem 1rem;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .btn-success {
            background-color: #5cb85c;
            border-color: #5cb85c;
        }

            .btn-success:hover {
                background-color: #4cae4c;
                border-color: #4cae4c;
            }

        .table {
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

            .table thead {
                background-color: #4a4a4a;
                color: #ffffff;
            }

            .table th, .table td {
                vertical-align: middle;
            }

            .table tbody tr:nth-of-type(odd) {
                background-color: #f8f9fa;
            }

            .table tbody tr:hover {
                background-color: #e9ecef;
            }

        .btn-group .btn {
            margin-right: 0.5rem;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1><i class="fas fa-home mr-2"></i> Shelters</h1>

        <div class="row mb-4">
            <div class="col text-end">
                <a href="@Url.Action("Create")" class="btn btn-success">
                    <i class="fas fa-plus-circle mr-2"></i> Create New Shelter
                </a>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Location</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var shelter in Model)
                    {
                        <tr>
                            <td>@shelter.Name</td>
                            <td>@shelter.Location</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@shelter.Id" class="btn btn-secondary">
                                        <i class="fas fa-edit mr-1"></i> Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@shelter.Id" class="btn btn-danger">
                                        <i class="fas fa-trash-alt mr-1"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>