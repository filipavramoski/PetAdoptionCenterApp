@{
    ViewData["Title"] = "Adopt a Pet";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(to bottom, #175d69 23%, #330c43 95%);
            color: #ffffff;
        }

        .hero-section {
            display: flex;
            justify-content: space-between;
            align-items: center;
            height: 95vh;
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .hero-section .hero {
                max-width: 45%; /* Reduced to leave more space for the image */
                color: #fff;
                margin-right: 40px;
        }

        .hero-section .hero h2 {
            font-size: 2.5rem;
            margin-bottom: 20px;
        }

        .hero-section .hero p {
            font-size: 1.2rem;
            margin-bottom: 20px;
            color: #c9c7c7;
        }

        .hero-section .buttons {
            margin-top: 20px;
        }

        .hero-section .buttons button {
            color: #fff;
            padding: 12px 24px;
            border-radius: 0.375rem;
            font-weight: 600;
            transition: 0.2s ease;
            background-color: #47b2e4;
            border: none;
            margin-right: 10px;
        }

        .hero-section .buttons button:hover {
            background-color: #4ec2ff;
        }

        .hero-section .img img {
            max-width: 100%;
            border-radius: 15px;
        }

        .form-container {
            display: none;
            padding: 20px;
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            margin-top: 20px;
        }

        .form-container.active {
            display: block;
        }

        .form-header {
            color: #333;
            margin-bottom: 20px;
        }

        .btn-block {
            background-color: #47b2e4;
            border: none;
        }

        .btn-block:hover {
            background-color: #4ec2ff;
        }

        /* Mobile responsiveness */
        
    </style>
</head>
<body>

    <section class="hero-section">
        <!-- Text on the left -->
        <div class="hero">
            <h2>Adopt a Friend</h2>
            <p>Welcome to our Pet Adoption Center! Find your new furry friend today and make a difference. Whether you're looking to adopt a pet or just exploring, we have a variety of animals ready for a loving home. Please log in or register to access all features.</p>

           @*  <!-- Buttons to show login/register forms -->*@
             <div class="buttons">
                <button id="show-login" class="btn">Login</button>
                <button id="show-register" class="btn">Register</button>
            </div>

            <!-- Login Form -->
            <div id="login-form" class="form-container">
                <h2 class="form-header text-center">Login</h2>
                <form method="post" id="account" action="/Identity/Account/Login">
                    @Html.AntiForgeryToken();
                    <div class="form-group">
                        <label for="login-email">Email address</label>
                        <input type="email" class="form-control" id="login-email" name="Email" required>
                    </div>
                    <div class="form-group">
                        <label for="login-password">Password</label>
                        <input type="password" class="form-control" id="login-password" name="Password" required>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Login</button>
                </form>
            </div>

            <!-- Register Form -->
            <div novalidate="novalidate" id="register-form" class="form-container">
                <h2 class="form-header text-center">Register</h2>
                <form method="post" id="registerForm" action="/Identity/Account/Register">
                    @Html.AntiForgeryToken();
                    <div class="form-group">
                        <label for="register-email">Email address</label>
                        <input type="email" class="form-control" id="register-email" name="Email" required>
                    </div>
                    <div class="form-group">
                        <label for="register-password">Password</label>
                        <input type="password" class="form-control" id="register-password" name="Password" required>
                    </div>
                    <div class="form-group">
                        <label for="register-confirm-password">Confirm Password</label>
                        <input type="password" class="form-control" id="register-confirm-password" name="ConfirmPassword" required>
                    </div>
                    <button type="submit" class="btn btn-secondary btn-block">Register</button>
                </form>
            </div> 
        </div>

        
        <div class="img">
            <img src="https://cff2.earth.com/uploads/2019/07/08191128/The-personalities-of-animal-owners-are-reflected-in-their-pets.jpg" alt="hero image" />
        </div>
    </section>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script>
        $(document).ready(function () {
            // Show login form and hide register form
            $('#show-login').click(function () {
                $('#login-form').addClass('active');
                $('#register-form').removeClass('active');
            });

            // Show register form and hide login form
            $('#show-register').click(function () {
                $('#register-form').addClass('active');
                $('#login-form').removeClass('active');
            });
        });
    </script>
</body>
</html>
