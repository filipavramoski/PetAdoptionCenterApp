@model EShop.Domain.Models.AdoptionApplication
@using Microsoft.AspNetCore.Identity
@inject UserManager<EShop.Domain.Identity.PetAdoptionCenterUser> UserManager

@{
    ViewData["Title"] = "Create Adoption Application";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.0/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f0f2f5;
            color: #333;
        }

        .container {
            max-width: 900px;
            margin: 2rem auto;
            padding: 2rem;
            /* background-color: #fff; */
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }

        h2 {
            color: #007bff;
            text-align: center;
            font-weight: bold;
            margin-bottom: 2rem;
        }

        .form-group label {
            font-weight: bold;
            color: #555;
        }

        .form-control[readonly] {
            background-color: #e9ecef;
            opacity: 1;
        }

        .btn {
            border-radius: 30px;
            padding: 0.5rem 1.5rem;
            font-weight: bold;
            transition: all 0.3s ease;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #004085;
            }
    </style>
</head>
<body>
    <div class="container">
        <h2>Create Adoption Application</h2>

        <form asp-action="Apply" method="post" class="bg-light p-4 rounded">
            <!-- Adopter field -->
            <div class="form-group mb-3">
                <label for="AdopterName" class="form-label">Adopter</label>
                <input type="text" id="AdopterName" class="form-control" value="@Model.Adopter?.FirstName" readonly />
            </div>

            <!-- Pet field -->
            <div class="form-group mb-3">
                <label for="PetName" class="form-label">Pet</label>
                <input type="text" id="PetName" class="form-control" value="@Model.Pet?.Name" readonly />
            </div>

            <!-- Hidden fields for PetId and AdopterId -->
            <input type="hidden" name="PetId" value="@Model.Pet?.Id" />
            <input type="hidden" name="AdopterId" value="@Model.Adopter?.Id" />

            <!-- Submit button -->
            <div class="form-group text-center">
                <input type="submit" value="Submit Application" class="btn btn-primary" />
            </div>
        </form>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>
