
 @model EShop.Domain.Models.Pet
@{
    ViewData["Title"] = "Pet Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold text-white mb-6">Pet Details</h1>
    <div class="max-w-2xl mx-auto bg-white rounded-lg overflow-hidden shadow-lg">
        <img src="@Model.PhotoUrl" class="w-full h-64 object-cover" alt="@Model.Name" />
        <div class="p-6 bg-gray-50">
            <h2 class="text-2xl font-semibold text-gray-800 mb-4">@Model.Name</h2>
            <div class="mb-4">
                <p class="text-gray-700"><strong class="text-gray-900">Description:</strong> @Model.Description</p>
                <p class="text-gray-700 mt-2"><strong class="text-gray-900">Price:</strong> @Model.Price.ToString("C")</p>
                <!-- Add other details if necessary -->
            </div>
            <div class="flex space-x-4 mt-6">
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="Delete" asp-controller="Pets" asp-route-id="@Model.Id"
                       class="px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600 transition duration-300">
                        Delete
                    </a>
                }
                
                <a href="@Url.Action("Index")"
                   class="px-4 py-2 bg-gray-500 text-white rounded hover:bg-gray-600 transition duration-300">
                    Back to List
                </a>
            </div>
        </div>
    </div>
</div>