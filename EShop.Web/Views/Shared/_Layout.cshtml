<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PetAdoption</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PetAdoption.styles.css" asp-append-version="true" />
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'custom-blue': '#4169E1',
                        'custom-teal': '#008080',
                        'custom-purple': '#4B0082',
                    }
                }
            }
        }
    </script>
</head>
<body class="flex flex-col min-h-screen">
    <header class="bg-gradient-to-r from-custom-blue via-custom-teal to-custom-purple shadow-md">
        <nav class="container mx-auto px-4 py-3 text-white">
            <div class="flex items-center justify-between">
                <a class="text-2xl font-bold flex items-center text-white" asp-area="" asp-controller="Home" asp-action="Index">
                    <svg class="w-8 h-8 mr-2" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M6.293 9.293a1 1 0 0 1 1.414 0L10 11.586l2.293-2.293a1 1 0 1 1 1.414 1.414l-3 3a1 1 0 0 1-1.414 0l-3-3a1 1 0 0 1 0-1.414z" clip-rule="evenodd" /></svg>
                    PetAdoption
                </a>
                <button class="lg:hidden text-white" id="menu-toggle" aria-label="Toggle navigation menu">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path></svg>
                </button>
                <div class="hidden lg:flex items-center space-x-4" id="menu">
                    <a class="text-white hover:text-blue-200 transition-colors duration-200" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    <a class="text-white hover:text-blue-200 transition-colors duration-200" asp-area="" asp-controller="Pets" asp-action="Index">Pets</a>
                    @if (User.IsInRole("Admin"))
                    {
                        <a class="text-white hover:text-blue-200 transition-colors duration-200" asp-area="" asp-controller="Shelters" asp-action="Index">Shelters</a>
                    }
                    <a class="text-white hover:text-blue-200 transition-colors duration-200" asp-area="" asp-controller="AdoptionApplications" asp-action="Index">Adoption Applications</a>
                    
                    <a class="nav-link text-dark" asp-area="" asp-controller="Book" asp-action="Index">Books from the partner project</a>
                   
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <main class="flex-grow container mx-auto px-4 py-8">
        @RenderBody()
    </main>
    <footer class="bg-gradient-to-r from-custom-blue via-custom-teal to-custom-purple text-white py-4">
        <div class="container mx-auto px-4 text-center">
            &copy; 2024 - PetAdoption 
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        document.getElementById('menu-toggle').addEventListener('click', function () {
            document.getElementById('menu').classList.toggle('hidden');
        });
    </script>
</body>
</html>
